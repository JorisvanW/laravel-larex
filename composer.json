{
    "name": "jorisvanw/laravel-larex",
    "description": "Translate your Laravel application from a single CSV file!",
    "keywords": [
        "laravel",
        "localization",
        "translation",
        "i18n",
        "csv"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luca Patera",
            "email": "lucapatera@outlook.it",
            "homepage": "https://www.lucapatera.it/",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "illuminate/support": "^7.0|^8.0",
        "loilo/fuse": "^4.0",
        "spatie/simple-excel": "^1.13"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0|^6.0",
        "pestphp/pest": "^1.15"
    },
    "autoload": {
        "psr-4": {
            "Lukasss93\\Larex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lukasss93\\Larex\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lukasss93\\Larex\\LarexServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest --colors=always"
        ],
        "test-coverage": [
            "./vendor/bin/pest --colors=always --coverage-clover coverage.xml"
        ]
    }
}
